
<%= render 'admin/header' %>

<h1>Listing admin_posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Content</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admin_posts.each do |admin_post| %>
  <tr>
    <td><%= admin_post.name %></td>
    <td><%= admin_post.category_id %></td>
    <td><%= admin_post.content %></td>
    <td><%= admin_post.order %></td>
    <td><%= link_to 'Show', admin_post %></td>
    <td><%= link_to 'Edit', edit_admin_post_path(admin_post) %></td>
    <td><%= link_to 'Destroy', admin_post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_admin_post_path %>
